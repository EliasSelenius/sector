SpaceshipType* ship_selection_menu() {
    SpaceshipType* result = null;

    let l = *world_ui_layer;

    static Transform2D menu_cam_tr = {scale=200};
    mouse_drag_control(*menu_cam_tr);
    camera_to_dispatch = menu_cam_tr;

    vec2 mouse_world_pos = get_mouse_world_coord(menu_cam_tr);

    float32 horz_pos = -1;
    for 0 .. ship_types.length {
        let st = *ship_types[it];

        float32 stride = st.sprite.uv_scale.x * st.sprite.tex.width;
        float32 height = st.sprite.uv_scale.y * st.sprite.tex.height;
        float32 start = horz_pos;

        Transform2D tr = {};
        tr.scale = 1;
        tr.pos = {horz_pos + stride/2, height/2};
        horz_pos += stride + 30;

        float32 glyph_height = 10;
        vec4 color = vec4_one;
        vec4 outline = vec4_zero;


        if is_unlocked(st) {
            vec2 size = { stride, height };
            vec2 bb_min = tr.pos - size/2;
            vec2 bb_max = tr.pos + size/2;

            if point_inside_bb(mouse_world_pos, bb_min, bb_max) {
                outline = {1,1,1,1};
                tr.scale = 1.1;
                if mouse_down(Left_Mouse) {
                    result = st;
                }
            }

            draw_text(l, tr.pos + make_vec(stride/2, height/2), glyph_height, to_string(st.hp as uint32), Red);
            draw_text(l, tr.pos + make_vec(stride/2, height/2 - glyph_height), glyph_height, to_string(st.cargo_capacity), Blue);

            draw_text(l, tr.pos + make_vec(-stride/2, height/2), glyph_height, to_string(st.build_cost), Cyan);
        } else {
            uint32 prct = unlock_percent(st);
            let text = make_string(concat(to_string(prct), "%"));
            draw_text(l, tr.pos - make_vec(5*(text.length-1 as float32)/2.0, 0), glyph_height, text, White);

            color = {0,0,0, 1};
        }

        draw_sprite(tr, 0, st.sprite, color, vec4_zero, outline);

        draw_text(l, tr.pos + make_vec(-stride/2, -height/2), glyph_height, st.name, White);
    }

    return result;
}

void draw_menu() {

    let old_tab = menu_tab;
    draw_tabs(*static_ui_layer);
    if old_tab != menu_tab and menu_tab == .Map {
        camera_map = camera_world;
        camera_map.scale *= 2;
    }

    switch (menu_tab) {
    case .Ships: {
        float32 h = 0.07*1.5;
        draw_credits(app.top_left + {h, -h}, h);

        let st = ship_selection_menu();
        if st {
            if player_credits >= st.build_cost {
                player_credits -= st.build_cost;
                menu_open = false;

                player = spawn_ship(camera_world.pos + random_vec2(chunk_size*0.5), st, team_id_player);
                list_add(*player_fleet, *player);
            }
        }
    } break;
    case .Cargo: break;
    case .Tech: break;
    case .Map: {

        mouse_drag_control(*camera_map);
        camera_to_dispatch = camera_map;

        let l = *world_ui_layer;

        // draw_minimap(vec2_zero);


        // TODO: hmm... should we draw the background on the map?
        // draw_background(camera_map.pos);

        for y: 0 .. sector_count_sqrt for x: 0 .. sector_count_sqrt {

            let sector = index_sectors(x, y);
            // let north = index_sectors(x, y+1);
            // if north and north.faction_team_id != sector.faction_team_id {

            // }


            float32 opa = 0.1;
            Color bg_color = opacity(sector.discovered ? White : Gray, opa);
            Color tx_color = opacity(Black, opa);

            ivec2 spos = {x, y} - make_ivec2(sector_count_sqrt/2);
            vec2 pos = make_vec(spos) * sector_size;
            vec2 size = {sector_size, sector_size};
            UI_Rect rect = {pos, size};
            float32 pixel_size = 2.0 / app.window_height * camera_map.scale;
            rect.size = rect.size - vec2_one*pixel_size;
            draw_rect(l, rect, bg_color);

            let level = get_level(pos);
            let str = to_string(level);
            float32 glyph_height = rect.size.y * 0.4;
            draw_text(l, center_text(rect, glyph_height, str), glyph_height, str, tx_color);

            draw_rect(l, sector.biome_center, vec2_one*pixel_size*2, Green);
        }

        for 0 .. entity_pool.count {
            let en = *entity_pool.data[it];
            if is_dead(en) continue;

            vec4 color_fac = vec4_one;
            vec4 color_add = vec4_zero;
            vec4 color_out = vec4_zero;
            if en.entity_type == .ship {
                float32 t = (sin(app.total_run_time*5.0) + 1.0) / 2.0;
                float32 w = lerp(t, 0.4, 1);
                if en.team_id == team_id_player {
                    color_fac = {0.2,0.2,w,1};
                    color_add = {0,0,w,1};
                } else {
                    color_fac = {w,0.2,0.2,1};
                    color_add = {w,0,0,1};
                }
            } else if en.entity_type == .asteroid {
                float32 v = 0.3;
                color_fac = {v,v,v,1};
            }

            DrawBuffers db = en.entity_type == .debris ? db_debris[en.level] : draw2d_renderer.quad_db;
            draw_sprite(db, en.tr, en.depth, en.sprite, color_fac, color_add, color_out);
        }
    } break;
    case .Esc: break;
    }
}

void draw_tabs(RenderLayer* l) {

    if key_pressed('A') menu_tab = (menu_tab-1) % Menu_Tabs.Count;
    if key_pressed('D') menu_tab = (menu_tab+1) % Menu_Tabs.Count;

    float32 tab_width = 2.0 / tab_names.length;
    float32 tab_height = 0.1;
    vec2 size = {tab_width, tab_height};

    vec2 pos = {-1, 1 - tab_height};
    for 0 .. tab_names.length {


        let p = pos + make_vec((it as float32 + 0.5) * tab_width, 0);
        let s = size * make_vec(0.9, 1);
        UI_Rect rect = {p,s};

        Color color = White;
        if hover(rect, Input.mouse_pos) {
            color = Gray;
            if mouse_pressed(Left_Mouse) menu_tab = it;
        }

        if it == menu_tab {
            color = Blue;
        }

        let name = make_string(tab_names[it]);

        draw_rect(l, p, s, color);
        draw_text(l, center_text(rect, s.y, name), s.y, name, Black);
        // pos.x += 0.2;
    }
}

void draw_minimap(vec2 center) {
    float32 px = 2.0 / app.window_height;

    float32 scale = 0.12;
    let center_sector = get_sector_coord(camera_world.pos);
    for y: -1 .. 2   for x: -1 .. 2 {
        let pos = camera_world.pos / sector_size;
        let sector_pos = center_sector + {x, y};
        uint32 sector_level = (abs(sector_pos.x) + abs(sector_pos.y)) as uint32;
        vec2 screen_pos = center + (sector_pos - pos) * scale;

        UI_Rect rect = {screen_pos, {scale, scale}};

        draw_rect(pad(rect, 1*px), opacity(Gray, 0.3));
        draw_text(screen_pos, 0.40 * scale, to_string(sector_level), Black);
    }

    vec2 world2minimap(vec2 wpos) {
        float32 scale = 0.12;
        return (wpos - camera_world.pos) / sector_size * scale;
    }

    for 0 .. entity_pool.count {
        let en = *entity_pool.data[it];
        if is_dead(en) continue;

        Color color = Blue;
        float32 m = 2;
        switch (en.entity_type) {
            case .ship:     color = Red;    m = 2; break;
            case .station:  color = Blue;   m = 3; break;
            default: continue;
        }

        // make_vec2(0.07*scale)

        UI_Rect rect = {center + world2minimap(en.tr.pos)};
        rect.size = {px, px} * m;

        draw_rect(rect, color);
    }

    draw_rect(center, make_vec2(px*4), Green);
}

