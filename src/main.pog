void draw_bar(UI_Rect rect, float32* time, float32 value, max_value, Color target_color) {
    float32 px = 2.0 / app.window_height;

    Color bar_bg  = rgba(0xA0_A0_A0_A0);
    Color color_flash = lerp(@time, target_color, White);

    float32 progress = value / max_value;
    UI_Rect rect_progress = scale_pivot(pad(rect, 4*px), progress, lerp(@time, 1, 1.5),  -1, 0);

    draw_rect(rect, bar_bg);
    draw_rect(rect_progress, color_flash);

    float32 h = rect.size.y;
    UI_Rect rect_txt = child(rect_progress, 1,0,   h/2.0, h);

    uint32 display_value = value as uint32;
    uint32 display_max_value = max_value as uint32;

    if display_value != 0 and display_value != display_max_value {
        let str_value = to_string(display_value);
        vec2 pos = rect_txt.center;
        draw_text_backwards(pos, h, str_value, White);
    }

    let str_max_value = to_string(display_max_value);
    vec2 max_value_pos = point(rect, 1, 0) + {h/2.0, 0};
    draw_text(max_value_pos, h, str_max_value, target_color);

    let dt = deltatime();
    float32 rate = 8;
    @time = exp_decay(@time, 0, rate, dt);
}

void draw_credits(vec2 pos, float32 height) {
    float32 dt = deltatime();

    static float32 credits_display_interp = 1.0;

    if delay_payment <= 0.0 {
        if credits_to_add {
            player_credits++;
            credits_to_add--;
            credits_display_interp = 0;
        }
    } else {
        delay_payment -= dt;
    }

    Color regular_color = Cyan;

    Color c = lerp(credits_display_interp, White, regular_color);
    float32 h = lerp(credits_display_interp, height*1.4, height);
    credits_display_interp = exp_decay(credits_display_interp, 1, 6, dt);

    pos = draw_text(pos, h, to_string(player_credits), c);
    if credits_to_add {
        pos = draw_text(pos, height, concat(" +", to_string(credits_to_add)), regular_color);
    }

    float32 half = height*0.5;
    draw_text(pos + {0, -half/2.0}, half, "credits", regular_color);
}

